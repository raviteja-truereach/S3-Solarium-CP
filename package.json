{
  "name": "solariumcp",
  "version": "0.0.1",
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "env:dev": "./scripts/switch-env.sh development",
    "env:staging": "./scripts/switch-env.sh staging",
    "env:prod": "./scripts/switch-env.sh production",
    "build:android:dev": "ENVFILE=.env.development yarn android",
    "build:android:staging": "ENVFILE=.env.staging yarn android",
    "build:android:prod": "ENVFILE=.env.production yarn android",
    "build:ios:dev": "ENVFILE=.env.development yarn ios",
    "build:ios:staging": "ENVFILE=.env.staging yarn ios",
    "build:ios:prod": "ENVFILE=.env.production yarn ios",
    "fastlane:android:debug": "ENVFILE=.env.development fastlane android_debug",
    "fastlane:android:staging": "ENVFILE=.env.staging fastlane android_debug",
    "fastlane:android:internal:staging": "ENVFILE=.env.staging fastlane android_internal",
    "fastlane:android:internal:prod": "ENVFILE=.env.production fastlane android_internal",
    "build:android:fastlane:dev": "./scripts/build-android.sh development debug",
    "build:android:fastlane:staging": "./scripts/build-android.sh staging debug",
    "build:android:fastlane:internal": "./scripts/build-android.sh staging internal",
    "fastlane:ios:debug": "ENVFILE=.env.development fastlane ios_debug",
    "fastlane:ios:staging": "ENVFILE=.env.staging fastlane ios_debug",
    "fastlane:ios:beta:staging": "ENVFILE=.env.staging fastlane ios_beta",
    "fastlane:ios:beta:prod": "ENVFILE=.env.production fastlane ios_beta",
    "build:ios:fastlane:dev": "./scripts/build-ios.sh development debug",
    "build:ios:fastlane:staging": "./scripts/build-ios.sh staging debug",
    "build:ios:fastlane:beta": "./scripts/build-ios.sh staging beta",
    "setup:ios": "./scripts/setup-ios.sh",
    "pods": "cd ios && pod install",
    "ci:install": "yarn install --frozen-lockfile --prefer-offline",
    "ci:validate-env": "./scripts/ci/require-envfile.sh",
    "ci:lint": "yarn lint --format=json --output-file=eslint-report.json",
    "ci:test": "yarn test:ci --reporters=default --reporters=jest-junit",
    "ci:build:android": "fastlane android_debug --verbose",
    "ci:build:ios": "fastlane ios_debug --verbose",
    "ci:security-scan": "gitleaks detect --source . --verbose --exit-code 1",
    "ci:sonar": "sonar-scanner",
    "docs:lint": "markdownlint '*.md' 'docs/**/*.md' --fix",
    "docs:check": "markdownlint '*.md' 'docs/**/*.md'",
    "docs:remark": "remark . --output --frail",
    "docs:all": "yarn docs:lint && yarn docs:remark",
    "badges:generate": "./scripts/generate-ci-badges.sh",
    "badges:coverage": "node ./scripts/generate-badges.js",
    "validate:all": "yarn ci:validate-env && yarn lint && yarn type-check && yarn test:ci && yarn docs:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "generate-badges": "node scripts/generate-badges.js",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testNamePattern='accessibility|a11y' --watchAll=false",
    "test:coverage:open": "jest --coverage && open coverage/lcov-report/index.html",
    "test:badges": "jest-coverage-badges --output coverage/badges",
    "test:clear": "jest --clearCache",
    "test:comprehensive": "./scripts/test-coverage-comprehensive.sh",
    "test:debug": "jest --detectOpenHandles --forceExit --verbose",
    "test:auth": "jest --testPathPattern=auth",
    "test:coverage:auth": "jest --coverage --testPathPattern='(auth|Auth)' --coverageDirectory=coverage/auth",
    "test:watch:auth": "jest --watch --testPathPattern=auth",
    "e2e:build": "detox build --configuration ios.sim.debug",
    "e2e:test": "detox test --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug",
    "e2e:test:login": "detox test --configuration ios.sim.debug e2e/loginSuccess.e2e.ts",
    "e2e:test:lockout": "detox test --configuration ios.sim.debug e2e/otpLockout.e2e.ts",
    "test:sync": "jest __tests__/sync --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:addlead": "jest __tests__/screens/AddLeadScreen.test.tsx",
    "test:integration": "jest __tests__/integration --coverage",
    "test:sync-watch": "jest __tests__/sync --watch",
    "test:coverage-sync": "jest __tests__/sync --coverage --coverageReporters=text-lcov | coveralls",
    "coverage:badge": "node scripts/generate-badges.js",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "ci:quick": "yarn test && yarn lint:check",
    "detox:ios:build": "detox build --configuration ios.sim.debug",
    "detox:ios:test": "detox test --configuration ios.sim.debug",
    "detox:android:build": "detox build --configuration android.emu.debug",
    "detox:android:test": "detox test --configuration android.emu.debug",
    "detox:test": "detox test",
    "quality-check": "npm run lint && npm run type-check && npm run test:coverage",
    "docs:lint:fix": "markdownlint --fix README.md CHANGELOG.md docs/**/*.md",
    "docs:validate": "bash scripts/validate-docs.sh",
    "docs:links": "markdown-link-check README.md",
    "docs:serve": "docsify serve docs",
    "changelog:check": "grep -q 'S2-TASK-05' CHANGELOG.md && echo '✅ Changelog updated' || echo '❌ Changelog missing S2-TASK-05'",
    "test:e2e": "detox test",
    "test:e2e:build": "detox build",
    "sonar": "sonar-scanner",
    "test:full": "jest --coverage && node scripts/generate-coverage-badge.js",
    "test:lead-module": "jest --testPathPattern='(leadApi|leadSlice|LeadDao|SyncSystem)' --coverage",
    "lint:test": "eslint __tests__/**/*.{js,ts,tsx}",
    "md-lint": "npm run docs:lint",
    "performance:test": "bash scripts/performance-test-runner.sh",
    "performance:test:minimum": "bash scripts/performance-test-runner.sh minimum android all",
    "performance:test:high-end": "bash scripts/performance-test-runner.sh high-end android all",
    "performance:validate": "node scripts/validate-performance-budget.js",
    "performance:report": "node scripts/collect-performance-metrics.js && node scripts/validate-performance-budget.js",
    "performance:overhead": "bash scripts/performance-test-runner.sh ci android overhead",
    "bundle:analyze": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android-release.js --verbose",
    "bundle:analyze:ios": "npx react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios-release.js --verbose",
    "build:release:android": "npx react-native run-android --variant=release",
    "build:release:ios": "NODE_ENV=production npx react-native run-ios --configuration Release"
  },
  "dependencies": {
    "@microsoft/applicationinsights-react-native": "^4.3.6",
    "@microsoft/applicationinsights-web": "^3.3.9",
    "@oguzhnatly/react-native-image-manipulator": "^1.0.5",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-documents/picker": "^10.1.5",
    "@react-navigation/bottom-tabs": "6.3.3",
    "@react-navigation/drawer": "^7.5.6",
    "@react-navigation/native": "6.0.16",
    "@react-navigation/native-stack": "6.6.2",
    "@react-navigation/stack": "6.3.20",
    "@reduxjs/toolkit": "1.9.7",
    "@shopify/flash-list": "^1.8.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "events": "^3.3.0",
    "file-type": "^21.0.0",
    "jest-axe": "^10.0.0",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-hook-form": "^7.60.0",
    "react-native": "0.71.19",
    "react-native-config": "1.5.5",
    "react-native-date-picker": "^5.0.13",
    "react-native-device-info": "^14.0.4",
    "react-native-fs": "^2.20.0",
    "react-native-gesture-handler": "2.8.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-keychain": "8.2.0",
    "react-native-otp-textinput": "1.1.1",
    "react-native-paper": "^5.11.0",
    "react-native-reanimated": "2.14.4",
    "react-native-restart": "^0.0.27",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "3.18.2",
    "react-native-sqlite-storage": "^6.0.1",
    "react-native-super-grid": "^6.0.1",
    "react-native-toast-message": "^2.3.3",
    "react-native-vector-icons": "10.0.3",
    "react-native-virtualized-view": "^1.0.0",
    "react-redux": "8.1.3",
    "recyclerlistview": "^4.2.3",
    "redux-persist": "6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@react-native/eslint-config": "^0.72.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "13.2.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.6",
    "@types/react-native": "^0.71.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "29.2.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "docsify-cli": "^4.4.4",
    "eslint": "^8.19.0",
    "husky": "^8.0.0",
    "jest": "29.2.1",
    "jest-coverage-badges": "1.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "jest-junit": "16.0.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^13.0.3",
    "markdown-link-check": "^3.11.2",
    "markdownlint-cli": "^0.37.0",
    "metro-react-native-babel-preset": "^0.73.10",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.4.0",
    "typescript": "4.8.4"
  }
}
